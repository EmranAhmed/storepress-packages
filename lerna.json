{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "packages/**/build/*",
    "packages/**/build-module/*",
    "packages/**/build-style/*",
    "CHANGELOG.md",
    "README.md",
    "{.storybook,stories,bin}/**"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish"
    }
  }
}
