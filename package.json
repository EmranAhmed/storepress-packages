{
  "name": "storepress-packages",
  "version": "0.0.6",
  "private": true,
  "description": "StorePress Packages",
  "author": "StorePress",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "StorePress"
  ],
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@storepress/components": "file:packages/components",
    "@storepress/icons": "file:packages/icons",
    "@storepress/tooltip": "^0.8.0",
    "@storepress/utils": "file:packages/utils",
    "@wordpress/api-fetch": "^7.36.0"
  },
  "scripts": {
    "storybook": "storybook dev -p 6007",
    "storybook-docs": "storybook dev --docs",
    "build-storybook-docs": "storybook build --docs",
    "build-storybook": "storybook build",
    "build": "npm run build --workspaces --if-present",
    "test": "wp-scripts test-unit-js --config jest.config.js",
    "test:single": "wp-scripts test-unit-js --config jest.config.js packages/utils/tests/dom.test.js",
    "test:coverage": "wp-scripts test-unit-js --config jest.config.js --coverage",
    "test:debug": "wp-scripts test-unit-js --config jest.config.js --verbose",
    "postbuild": "node ./bin/build-style.js",
    "format": "wp-scripts format './packages/**/src/**/*.js'",
    "lint:css": "wp-scripts lint-style './packages/**/src/**/*.scss'",
    "lint:js": "wp-scripts lint-js --format=pretty './packages/**/src/**/*.js'",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "devDependencies": {
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@storybook/addon-actions": "7.6.20",
    "@storybook/addon-essentials": "7.6.20",
    "@storybook/addon-interactions": "7.6.20",
    "@storybook/addon-links": "7.6.20",
    "@storybook/blocks": "7.6.20",
    "@storybook/client-api": "7.6.20",
    "@storybook/manager-api": "7.6.20",
    "@storybook/react": "7.6.20",
    "@storybook/react-webpack5": "7.6.20",
    "@storybook/test": "7.6.20",
    "@storybook/theming": "7.6.20",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@wordpress/babel-preset-default": "^8.36.0",
    "@wordpress/browserslist-config": "^6.36.0",
    "@wordpress/components": "^30.9.0",
    "@wordpress/element": "^6.36.0",
    "@wordpress/eslint-plugin": "^22.22.0",
    "@wordpress/jest-preset-default": "^12.36.0",
    "@wordpress/postcss-plugins-preset": "^5.36.0",
    "@wordpress/prettier-config": "^4.36.0",
    "@wordpress/scripts": "^31.1.0",
    "browserslist": "^4.28.0",
    "css-loader": "6.2.0",
    "eslint-formatter-pretty": "5.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fs-extra": "^11.3.1",
    "glob": "^13.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "^9.0.3",
    "postcss": "8.4.38",
    "postcss-loader": "6.2.1",
    "prettier": "npm:wp-prettier@3.0.3",
    "prop-types": "^15.8.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "^6.0.1",
    "sass": "1.54.0",
    "sass-loader": "16.0.3",
    "storybook": "7.6.20",
    "style-loader": "3.2.1"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
